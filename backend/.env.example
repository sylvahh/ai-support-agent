# Server Configuration
PORT=3000
NODE_ENV=development

# Database - PostgreSQL connection string
# For local: postgresql://user:password@localhost:5432/dbname
# For Neon/Supabase: Use the connection string from your provider
DATABASE_URL=postgresql://user:password@localhost:5432/ai_support_agent

# LLM Provider - Groq API
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=gsk_your_api_key_here

# Cloudinary - File Uploads (Optional)
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Message Limits (Optional - defaults shown)
MAX_MESSAGE_LENGTH=8000
